<?xml version="1.0" encoding="UTF-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="SoftwareCW.Views.AlternativesPage">
    <StackLayout>
        <Label Text="Rating of the alternatives:" HorizontalOptions="Center" x:Name="DescriptionLabel"
               VerticalOptions="Center" HorizontalTextAlignment="Center" Padding="20, 20, 20, 0" FontAttributes="Bold"/>
        <Label Text="" HorizontalOptions="Center" x:Name="WarningLabel"
               VerticalOptions="Center" HorizontalTextAlignment="Center" Padding="20, 20, 20, 0"/>
        <ListView x:Name="AlternativesListView" RowHeight="80" VerticalOptions="CenterAndExpand">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <TextCell Text="{Binding Name}" x:Name="alternativeDetailText"
                              Detail="{Binding DisplayGlobalPriority, StringFormat='{0:F2}'}" />
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
        <Button x:Name="submitButton" Text="SUBMIT" BackgroundColor="CornflowerBlue" Margin="10" Clicked="submitButton_Clicked"/>
    </StackLayout>
</ContentPage>


